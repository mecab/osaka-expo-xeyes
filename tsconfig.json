{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ],
    },
    "include": [
      "assets/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }